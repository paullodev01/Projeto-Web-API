<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_line_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            tools:srcCompat="@android:drawable/ic_dialog_info" /> <!-- Placeholder Icon -->

        <TextView
            android:id="@+id/tv_line_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Título da Linha da API"
            android:textAppearance="?attr/textAppearanceSubtitle1" /> <!-- Usando atributo de tema -->
    </LinearLayout>

    <View
        android:id="@+id/view_line_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginStart="40dp"  <!-- Alinha com o início do texto, após o ícone -->
        android:visibility="gone" <!-- Será controlado programaticamente -->
        tools:visibility="visible"/>
</LinearLayout>